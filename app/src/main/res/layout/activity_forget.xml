<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/splash"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/reg_image"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:scaleType="fitXY"
        android:src="@mipmap/logologin"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="#262626"
        android:text="密码找回-信息验证" />

    <EditText
        android:id="@+id/userid"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:hint="@string/loginac"
        android:inputType="text"
        android:background="@drawable/login_userinfo"
        android:layout_gravity="center"
        />



    <EditText
        android:id="@+id/userphone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_userinfo"
        android:hint="请输入您的联系方式"
        android:inputType="phone"
        android:padding="5dp" />
    <EditText
        android:id="@+id/useremail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:hint="请输入邮箱"
        android:inputType="text"
        android:background="@drawable/login_userinfo"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/loginbtn_shape"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/nextbtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/loginbtn_shape"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>
